<Window x:Class="PLWPF.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="OrderWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ComboBox Name="GuestRequestList"  VerticalAlignment="Stretch" Grid.Column="0" SelectionChanged="cbRequestList_SelectionChanged" Text="{Binding Path=matchRequests}" Margin="2,1,0,357.667" FontSize="36" Width="392"  HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
            <ComboBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="1.209" X="0.598"/>
                </TransformGroup>
            </ComboBox.RenderTransform>
        </ComboBox>
        <ComboBox Name="OrderstList"  VerticalAlignment="Stretch" Grid.Column="1" SelectionChanged="cbRequestList_SelectionChanged" Text="{Binding Path=listOrders}" Margin="2,1,0,357.667" FontSize="36" Width="392"  HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5"/>
    </Grid>
</Window>
