<Window x:Class="PLWPF.GuestRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="Guest Request Window" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontStyle" Value="Normal"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
    </Window.Resources>
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="351*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <Button x:Name="returnButton" Content="Back" Margin="29,20,0,0" Width="120" Height="40" Grid.Row="1"/>
        <Button x:Name="updateRequestButton" Content="Update" Margin="504,20,0,0" Width="120" Height="40" Grid.Row="1"/>
        <Button x:Name="addRequestButton" Content="Add" Margin="649,20,0,0" Width="120" Height="40" Grid.Row="1" Click="addRequestButton_Click"/>

    </Grid>
</Window>
